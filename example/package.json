{
  "name": "@enzymefinance/example",
  "version": "0.0.0",
  "private": true,
  "main": "dist/enzymefinance-example.cjs.js",
  "module": "dist/enzymefinance-example.esm.js",
  "scripts": {
    "compile": "hardhat compile",
    "typecheck": "tsc --noEmit",
    "lint": "yarn lint:prettier && yarn lint:solhint",
    "lint:eslint": "eslint \"{*,**/*}.{js,jsx,ts,tsx}\"",
    "lint:prettier": "prettier --list-different \"{*,**/*}.{sol,json}\"",
    "lint:solhint": "solhint --max-warnings 0 \"contracts/{*,**/*}.sol\"",
    "format": "yarn format:prettier && yarn format:eslint",
    "format:prettier": "yarn lint:prettier --write",
    "format:eslint": "yarn lint:eslint --fix",
    "test": "TS_JEST_DISABLE_VER_CHECKER=true jest"
  },
  "dependencies": {
    "@babel/runtime": "^7.14.0",
    "@enzymefinance/ethers": "0.0.5",
    "ethers": "^5.1.4"
  },
  "devDependencies": {
    "@enzymefinance/babel-config": "^1.0.10",
    "@enzymefinance/codegen": "0.0.2",
    "@enzymefinance/eslint-config": "^1.0.5",
    "@enzymefinance/hardhat": "0.0.11",
    "@enzymefinance/prettier-config-solidity": "0.0.1",
    "@openzeppelin/contracts": "^3.4.1",
    "@types/jest": "^26.0.23",
    "eslint": "^7.25.0",
    "husky": "^4.3.8",
    "jest": "^26.6.1",
    "prettier": "^2.1.2",
    "solhint": "^3.3.4",
    "typescript": "^4.2.4"
  },
  "prettier": "@enzymefinance/prettier-config-solidity",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --fix",
    "*.json": "prettier --write",
    "*.sol": [
      "prettier --write",
      "solhint --fix"
    ]
  }
}
