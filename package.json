{
  "name": "@enzymefinance/ethereum-devtools",
  "private": true,
  "workspaces": [
    "packages/*",
    "config/*",
    "example"
  ],
  "preconstruct": {
    "packages": [
      "packages/*",
      "example"
    ]
  },
  "scripts": {
    "postinstall": "preconstruct dev && manypkg check && yarn compile",
    "example": "yarn manypkg run @enzymefinance/example",
    "compile": "yarn example compile",
    "dev": "preconstruct dev",
    "build": "preconstruct build",
    "watch": "preconstruct watch",
    "release": "yarn compile && yarn build && changeset publish",
    "typecheck": "manypkg exec yarn typecheck",
    "lint": "yarn lint:eslint && yarn lint:prettier && yarn lint:solhint",
    "lint:eslint": "eslint \"{*,**/*}.{js,jsx,ts,tsx}\"",
    "lint:prettier": "prettier --list-different \"{*,**/*}.{sol,json}\"",
    "lint:solhint": "solhint --max-warnings 0 \"example/contracts/{*,**/*}.sol\"",
    "format": "yarn format:prettier && yarn format:eslint",
    "format:prettier": "yarn lint:prettier --write",
    "format:eslint": "yarn lint:eslint --fix",
    "format:solhint": "yarn lint:solhint --fix",
    "test": "TS_JEST_DISABLE_VER_CHECKER=true jest && yarn example test"
  },
  "dependencies": {
    "@changesets/changelog-github": "^0.4.0",
    "@changesets/cli": "^2.16.0",
    "@enzymefinance/babel-config": "^1.0.13",
    "@enzymefinance/eslint-config": "^1.0.9",
    "@manypkg/cli": "^0.18.0",
    "@preconstruct/cli": "^2.1.0",
    "@types/jest": "^26.0.23",
    "babel-jest": "^27.0.2",
    "eslint": "^7.28.0",
    "husky": "^4.3.8",
    "jest": "^27.0.4",
    "lint-staged": "^11.0.0",
    "prettier": "^2.1.2",
    "solhint": "^3.3.4",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.2"
  },
  "prettier": "@enzymefinance/prettier-config-solidity",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --fix",
    "*.json": "prettier --write",
    "*.sol": [
      "prettier --write",
      "solhint --fix"
    ]
  }
}
